<% if !flash[:notice].blank? %>
  <div class="notice">
    <%= flash[:notice] %>
  </div>
<% end %>

<%= link_to("<< Back to List", {:action => 'index'}, :class => 'back-link') %>

<div class="sections show">
  <h2>Show Section</h2>

  <table summary="Section detail view">
    <tr>
      <th>Name</th>
      <td><%= @section.name %></td>
    </tr>
    <tr>
      <th>Position</th>
      <td><%= @section.position %></td>
    </tr>
    <tr>
      <th>Subject</th>
      <td><% if @section.page %>
            <%= @section.page.subject ? @section.page.subject.name : "-----" %>
          <% else %>
            <%= "-----" %>
          <% end %>
      </td>      
    </tr>
    <tr>
      <th>Page</th>
      <td><%= @section.page ? @section.page.name : "-----" %></td>      
    </tr>      
    <tr>
      <th>Visible?</th>
      <td><%= @section.visible ? 'true' : 'false' %></td>
    </tr>
    <tr>
      <th>Content Type</th>
      <td><%= @section.content_type %></td>
    </tr>
    <tr>
      <th>Content</th>
      <td><%= @section.content %></td>
    </tr>
    <tr>
      <th># Edits</th>
      <td>
          <%= @section.section_edits.size %><br>
      </td>
    </tr>        
    <tr>
      <th>Edit History</th>
      <td>
          <% @section.section_edits.each do |edit| %>
            <%= edit.editor.username %>: '<%= edit.summary %>' @ <%= edit.updated_at %><br>
          <% end %>  
      </td>
    </tr>
    <tr>
      <th>Created</th>
      <td><%= @section.created_at %></td>
    </tr>
    <tr>
      <th>Updated</th>
      <td><%= @section.section_edits.last ? @section.section_edits.last.updated_at : @section.updated_at %></td>
    </tr>
  </table>
</div>
